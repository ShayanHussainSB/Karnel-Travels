<div class="col-md-10 col-md-offset-1 animate-box fadeInUp animated-fast" style="margin-top:100px;">
    <h3>Join Us &amp; Be The Part of The World</h3>
    <form method="post" action="@Url.Action("CreateCustomer", "KarnelTravels")">
        <div class="row form-group">
            <div class="col-md-6">
                <label for="fname">First Name</label>
                @Html.TextBoxFor(m=>m.User_FirstName, new { type = "text", id = "fname", @class = "form-control", placeholder = "Enter Your firstname" })
                <div class="error">
                    @Html.ValidationMessageFor(m => m.User_FirstName)
                </div>
            </div>
            <div class="col-md-6">
                <label for="lname">Last Name</label>
                @Html.TextBoxFor(m => m.User_LastName, new { type = "text", id = "lname", @class = "form-control", placeholder = "Enter Your lastname" })
                <div class="error">
                    @Html.ValidationMessageFor(m => m.User_LastName)
                </div>
                </div>
        </div>

        <div class="row form-group">
            <div class="col-md-12">
                <label for="email">Email</label>
                @Html.TextBoxFor(m => m.User_Email, new { type = "email", id = "email", @class = "form-control", placeholder = "Enter Your Email" })
                <div class="error">
                    @Html.ValidationMessageFor(m => m.User_Email)
                </div>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-12">
                <label for="password">Password</label>
                @Html.TextBoxFor(m => m.User_Password, new { type = "password", id = "password", @class = "form-control", placeholder = "Enter Your Pasword" })
                <div class="error">
                    @Html.ValidationMessageFor(m => m.User_Password)
                </div>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-12">
                <label for="contact">Contact</label>
                <div class="error">
                    @Html.TextBoxFor(m => m.User_Contact, new { type = "text", id = "contact", @class = "form-control", placeholder = "Enter Your Contact No" })
                    @Html.ValidationMessageFor(m => m.User_Contact)
                </div>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-12">
                @{
                         List<string> gndr = new List<string>();
                          gndr.Add("Male");
                          gndr.Add("Female");
                          gndr.Add("Others");
                }
                <label for="gender">Gender</label>
                @Html.DropDownListFor(m => m.User_Gender, new SelectList(gndr), new { type = "text", id = "gender", @class = "form-control", placeholder = "Gender" })
                <div class="error">
                    @Html.ValidationMessageFor(m => m.User_Gender)
                </div>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-12">
                <label for="address">Address</label>
                @Html.TextAreaFor(m => m.User_Address, new { name = "message", id = "address", cols = "30", rows = "10", @class = "form-control", placeholder = "Enter your Address" })
                <div class="error">
                    @Html.ValidationMessageFor(m => m.User_Address)
                </div>
            </div>
        </div>
        <div class="form-group text-center">
            <button id="senddata" type="submit" class="btn btn-primary btn-lg">Create Account</button>
        </div>
        </form>
    </div>


