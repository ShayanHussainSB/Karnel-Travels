@model Karnel_Travels.Models.Accomadtion
@{
    ViewBag.Title = "AddAccomadtion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .error {
        color: orangered;
        font-family: 'MS UI Gothic';
        font-weight: bold;
    }

    .File {
        padding: 15px;
        background: #00ff90;
        color: white;
        font: bold;
    }
</style>
<div class="col-md-10 col-md-offset-1 animate-box fadeInUp animated-fast" style="margin-top:100px;">
    <h3>Fill Form &amp; Add a Accomadtion</h3>
    <form method="post" action="@Url.Action("AddAccomadtion", "KarnelTravels")" enctype="multipart/form-data">
        <div class="row form-group">
            <div class="col-md-6">
                <label for="fname">Accomadtion Name :</label>
                @Html.TextBoxFor(m => m.Accomadtion_Name, new { type = "text", id = "fname", @class = "form-control", placeholder = "Enter accomadtion name" })
                <div class="error">
                    @Html.ValidationMessageFor(m => m.Accomadtion_Name)
                </div>
            </div>
            <div class="col-md-6">
                <label for="lname">Accomadtion Contact :</label>
                @Html.TextBoxFor(m => m.Accomadtion_Contact, new { type = "text", id = "lname", @class = "form-control", placeholder = "Enter Accomadtion Contact" })
                <div class="error">
                    @Html.ValidationMessageFor(m => m.Accomadtion_Contact)
                </div>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-12">
                <label for="contact">Accomation Type:</label>
                @{
                    List<string> type = new List<string>();
                    type.Add("Resout");
                    type.Add("Hotel");
                }
                @Html.DropDownListFor(m => m.Accomadtion_Type, new SelectList(type), new { type = "text", id = "gender", @class = "form-control" })
                <div class="error">
                    @Html.ValidationMessageFor(m => m.Accomadtion_Type)
                </div>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-12">
                <label for="email"> Overview </label>
                @Html.TextBoxFor(m => m.Accomadtion_OverView, new { type = "text", id = "email", @class = "form-control", placeholder = "Enter A OverView For The Accomadtion" })
                <div class="error">
                    @Html.ValidationMessageFor(m => m.Accomadtion_OverView)
                </div>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-12">
                <label for="password">Price</label>
                @Html.TextBoxFor(m => m.Accomadtion_Price, new { type = "text", id = "password", @class = "form-control", placeholder = "Enter Accomadtion Price" })
                <div class="error">
                    @Html.ValidationMessageFor(m => m.Accomadtion_Price)
                </div>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-12">
                <label for="gender">Country :</label>
                @Html.TextBoxFor(m => m.Accomadtion_Country, new { type = "text", id = "gender", @class = "form-control", placeholder = "Enter Accomadtion City Name" })
                <div class="error">
                    @Html.ValidationMessageFor(m => m.Accomadtion_Country)
                </div>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-12">
                <label for="contact">City:</label>
                @Html.TextBoxFor(m => m.Accomadtion_City, new { type = "text", id = "contact", @class = "form-control", placeholder = "Enter Accomadtion City Name" })
                <div class="error">
                    @Html.ValidationMessageFor(m => m.Accomadtion_City)
                </div>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-12">
                <label for="contact">Important Information:</label>
                @Html.TextBoxFor(m => m.Accomadtion_ImpInfo, new { type = "text", id = "contact", @class = "form-control", placeholder = "Enter Accomadtion Important Information" })
                <div class="error">
                    @Html.ValidationMessageFor(m => m.Accomadtion_ImpInfo)
                </div>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-12">
                <label for="contact">Picture:</label>
                <input type="file"  name="picture"/>
                <div class="error">
                    @Html.ValidationMessageFor(m => m.Accomadtion_Picture)
                </div>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-12">
                <label for="address">Address :</label>
                @Html.TextAreaFor(m => m.Accomadtion_Address, new { name = "message", id = "address", cols = "30", rows = "10", @class = "form-control", placeholder = "Enter Accomadtion Address" })
                <div class="error">
                    @Html.ValidationMessageFor(m => m.Accomadtion_Address)
                </div>
            </div>
        </div>

        <div class="form-group text-center">
            <button id="senddata" type="submit" class="btn btn-primary btn-lg">Generate Accomadtion</button>
        </div>
    </form>
</div>



